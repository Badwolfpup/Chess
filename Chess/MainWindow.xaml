<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        mc:Ignorable="d"
        Title="MainWindow" Height="1200" Width="1200">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"></BooleanToVisibilityConverter>
    </Window.Resources>
    <Grid Width="1000">

        <Grid.RowDefinitions>
        
            <RowDefinition Height="100"/>
            <RowDefinition Height="900"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding GameInfo}" FontFamily="Segoe UI" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"></TextBlock>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <UniformGrid Rows="8" Grid.Row="0" Columns="1">
                <UniformGrid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="48"></Setter>
                        <Setter Property="FontFamily" Value="Segoe UI"></Setter>
                        <Setter Property="FontWeight" Value="Bold"></Setter>
                        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                        <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        <Setter Property="Padding" Value="0 0 7 0" />
                    </Style>
                </UniformGrid.Resources>
                <TextBlock>8</TextBlock>
                <TextBlock>7</TextBlock>
                <TextBlock>6</TextBlock>
                <TextBlock>5</TextBlock>
                <TextBlock>4</TextBlock>
                <TextBlock>3</TextBlock>
                <TextBlock>2</TextBlock>
                <TextBlock>1</TextBlock>
            </UniformGrid>
            <ItemsControl ItemsSource="{Binding Squares}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ItemsControl.ItemsPanel>

                    <ItemsPanelTemplate>

                        <UniformGrid Columns="8" Rows="8" Width="800" Height="800">

                        </UniformGrid>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding Color}" BorderBrush="Black" BorderThickness="3" MouseDown="Border_MouseDown">
                            <Image Source="{Binding Piece.ImageSource}" 
                                   Width="80" 
                                   Height="80" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <UniformGrid Columns="8" Grid.Row="1" Grid.Column="1">
                <UniformGrid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontSize" Value="48"></Setter>
                        <Setter Property="FontFamily" Value="Segoe UI"></Setter>
                        <Setter Property="FontWeight" Value="Bold"></Setter>
                        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                        <Setter Property="VerticalAlignment" Value="Top"></Setter>
                        <Setter Property="Padding" Value="0 7 0 0" />
                    </Style>
                </UniformGrid.Resources>
                <TextBlock>A</TextBlock>
                <TextBlock>B</TextBlock>
                <TextBlock>C</TextBlock>
                <TextBlock>D</TextBlock>
                <TextBlock>E</TextBlock>
                <TextBlock>F</TextBlock>
                <TextBlock>G</TextBlock>
                <TextBlock>H</TextBlock>
            </UniformGrid>
            <Grid Grid.Column="2" Grid.Row="0" Margin="7 0 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="/Images/BlackTurn.png" VerticalAlignment="Center" Visibility="{Binding ShowBlackPawn, Converter={StaticResource BoolToVis}}"></Image>
                <Image Grid.Row="1" Source="/Images/WhiteTurn.png" VerticalAlignment="Center" Visibility="{Binding ShowWhitePawn, Converter={StaticResource BoolToVis}}"></Image>
            </Grid>
        </Grid>

    </Grid>
</Window>
